---
import { Hash, Mail } from "@lucide/astro";
import LinkedinImage from "@/images/linkedin-logo.png";
import GithubImage from "@/images/github-logo.svg";

const options = [
  {
    icon: LinkedinImage.src,
    tooltip: "Linkedin",
    href: "https://www.linkedin.com/in/manikya-sharma-84615125a/",
  },
  {
    icon: GithubImage.src,
    tooltip: "GitHub",
    href: "https://github.com/Manikya-Sharma",
  },
  { icon: Mail, tooltip: "Email", href: "mailto:manikyasharma.ms@gmail.com" },
  { icon: Hash, tooltip: "More", href: "/contact" },
];
---

<ul class="flex gap-8">
  {
    options.map((option) => (
      <li
        class="sm:px-2 tooltip tooltip-bottom tooltip-primary"
        data-tip={option.tooltip}
      >
        <a aria-label={option.tooltip} href={option.href}>
          {typeof option.icon === "string" ? (
            <img
              src={option.icon}
              alt={option.tooltip}
              class="size-4 sm:size-5"
            />
          ) : (
            <option.icon class="size-4 sm:size-5" />
          )}
        </a>
      </li>
    ))
  }
</ul>
