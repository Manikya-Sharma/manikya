---
import { Hammer, Hash, NotebookText, Swords, ArrowRight } from "@lucide/astro";
import StaggeredText from "@/components/homepage/StaggeredText.svelte";
import DelayOpacity from "@/components/homepage/DelayOpacity.svelte";
import BaseLayout from "../layouts/BaseLayout.astro";
const options = [
    { icon: NotebookText, text: "About", href: "/about" },
    { icon: Swords, text: "Skills", href: "/skills" },
    { icon: Hammer, text: "Projects", href: "/projects" },
    { icon: Hash, text: "Socials", href: "/contact" },
];
---

<BaseLayout>
    <ul
        class="grow grid grid-cols-2 grid-rows-2 gap-2 font-electrolize text-5xl"
    >
        {
            options.map((option) => (
                <a
                    href={option.href}
                    class="h-full w-full grid place-items-center bg-white/30 backdrop-blur-md border border-white/40 rounded-md group"
                    style={{ boxShadow: "0 4px 30px rgba(0, 0, 0, 0.1)" }}
                >
                    <li class="flex items-center gap-4">
                        <DelayOpacity id={option.text} client:load>
                            <option.icon class="size-10 group-hover:rotate-12 transition-transform" />
                        </DelayOpacity>
                        <StaggeredText client:load text={option.text} />
                        <DelayOpacity
                            id={`${option.text}-arrow`}
                            startTime={300}
                            client:load
                        >
                            <ArrowRight class="size-10 group-hover:translate-x-3 transition-transform" />
                        </DelayOpacity>
                    </li>
                </a>
            ))
        }
    </ul>
</BaseLayout>
